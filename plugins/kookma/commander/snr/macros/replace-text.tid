<$list filter="[<__tiddler__>get<__field__>minlength[1]]" variable=null>
<$list filter="[<__replace__>minlength[1]]" variable=null>
<$wikify name="result" 
  text="""<$macrocall $name="replace-text" 
     tiddler=<<__tiddler__>> 
     field=<<__field__>> 
     replace=<<__replace__>> 
     replaceWith=<<__replaceWith__>> 
     flags=<<__flags__>>
